<Panel>
<!-- Ip address entry & game start -->
<InputField id = "ipaddress_input" visibility = "host" allowDragging = "true" returnToOriginalPositionWhenReleased = "false" onEndEdit = "storeIPAddress" position = "600 500 0" placeholder = "Input IP Address:"></InputField>
<Button id = "change_ipaddress" visibility = "host" allowDragging = "true" returnToOriginalPositionWhenReleased = "false" active = "false" onClick="changeIPAddress" position = "600 500 0" width = "160" height = "30">Change IP Address</Button>
