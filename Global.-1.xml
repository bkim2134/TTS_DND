<InputField id = "ipaddress_input" visibility = "host" onEndEdit = "storeIPAddress"  placeholder = "Input server address:"></InputField>
<Button id = "change_ipaddress" visibility = "host" active = "false" onClick="changeIPAddress" width = "160" height = "30">Change server address</Button>
</Panel>

